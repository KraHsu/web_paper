.edit_profile_header
  height: 15px
.edit_profile_container
  width: 100%
  height: 100%
  display: flex
  flex-direction: column
  .edit_profile_header
    height: fit-content
    hr
      border: none
      height: 2px
      background: var(--border-color)
    .edit_profile_headline
      margin: 15px 25px
      color: var(--font-headline)
      transition: .3s
  .profile_container,
  .profile_avatar
    .form-group
      margin: 15px
      dt
        margin: 0 0 6px
        label
          margin-left: 2px
          font-size: 18px
          font-weight: 600
      dd
        margin-left: 0
      .form-control
        width: 440px
        max-width: 100%
        margin-right: 5px
        background-color: var(--input-bg)
        padding: 5px 12px
        font-size: 14px
        line-height: 20px
        color: var(--font-color)
        vertical-align: middle
        background-repeat: no-repeat
        background-position: right 8px center
        border-width: 1px
        border-style: solid
        border-color: var(--border-color)
        border-radius: 6px
        box-shadow: var(--shadow-inset)
        transition: .3s
        &:focus
          background-color: var(--input-focus-bg)
          border-color: var(--border-focus-color)
          outline: none
          box-shadow: inset 0 0 0 1px transparent
        &.short
          width: 250px
      .note
        min-height: 17px
        margin: 4px 2px 2px
        font-size: 14px
        color: var(--font-disabled-color)
        &.short
          width: 270px
    #user_profile_bio
      height: 115px
      overflow: auto
      resize: none
  .grid_container
    display: grid
    grid-template-columns: 3fr 2fr

.profile_avatar
  display: flex;
  justify-content: flex-start;
  flex-direction: column;
  .avart_section
    display: flex
    justify-content: center
  .avatar
    border-radius: 50%
    position: relative
    cursor pointer
  .edit_profile_submit
    box-sizing: border-box
    width: 100%
    display: flex
    flex-direction: column
    position: relative
    justify-content: space-evenly;
    .edit_profile_save,
    .edit_profile_cancle
      margin: 25px 80px 10px 15px
