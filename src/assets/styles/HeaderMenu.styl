#console_menu
  z-index 99
  opacity: 0
  pointer-events: none
  display: flex
  width: 100vw
  height: 100vh
  position: absolute
  top: 0
  left: 0
  align-items: center
  justify-content: center
  backdrop-filter: blur(5px)
  transition: .3s
  .console_mask
    z-index: 1
    position: absolute
    top: 0
    left: 0
    width: 100vw
    height: 100vh
    transition: .3s
  .console_mask
    background-color: rgba(255 255 255 .3)
  .console_menu_main
    z-index 2
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    grid-template-rows: repeat(7, 1fr);
    grid-column-gap: 15px;
    grid-row-gap: 15px;
    width: 1000px
    height: 600px
    article
      background: rgba(255 255 255 .3)
      backdrop-filter: blur(5px)
      width: calc(100% - 26px)
      height: calc(100% - 20px)
      padding: 10px 12px
      border-radius: 15px
      border: 1px solid #d1d1d1
      transition: .2s
      &:hover
        box-shadow: 3px 3px 5px #0000001a
    .console_menu_keyboard
      grid-area: 6 / 3 / 8 / 6
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      grid-template-rows: 1fr;
      grid-column-gap: 10px;
      .left,.right
        display: grid
        top: 0
        grid-template-rows: 1fr 1fr 1fr 1fr
        padding-left: 15px
      .left
        grid-area: 1 / 1 / 6 / 2
        border-width: 0 1px 0 0
        border-color: #d1d1d1
        border-style: solid
      .right
        grid-area: 1 / 2 / 2 / 3
      .hotkey
        box-shadow: 0 4px 6px -1px rgba(0 0 0 0.1),0 2px 4px -2px rgba(0 0 0 0.1);
        text-transform: uppercase;
        font-weight: 700
        font-size: 7.5px
        padding: 2px 6px
        margin: 0 5px
        background: #eee
        border-radius: 4px
        border: 1px solid rgba(0 0 0 .3)
      .hotkey_act
        font-size: 18px
        color: #656565
        margin: 0 10px
    .console_menu_settings
      grid-area: 1 / 3 / 6 / 6
    .console_menu_info
      grid-area: 1 / 1 / 8 / 3

#console_menu.show
  opacity 1
  pointer-events: all
  .console_menu_main article
    animation show .3s ease

@keyframes show
  0%
    transform: translateY(20px)
  100%
    transform: translateY(0) 
