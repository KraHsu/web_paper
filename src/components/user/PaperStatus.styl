.paper_status_container
  width: 100%
  height: 100%
  display: flex
  flex-direction: column
  .paper_status_header
    display: flex
    width: 100%
    height: fit-content
    justify-content: space-between;
    align-items: center
    .paper_status_headline
      margin: 15px 25px
      width: fit-content
      display: inline-block
      color: var(--font-headline)
      transition: .3s
    .paper_search
      width: 300px
      margin-right: 20px
  .outer_container
    overflow: auto
    max-height: 690px
    box-sizing: border-box
    width: 100%
    height: 100%
    padding-left: 20px
    padding-right: 20px
    
.my_papers
  border-collapse: collapse
  width: 100%
  height: 100%
  table-layout: fixed
.my_papers_head
  tr
    display: grid
    width: 100%
    grid-template-columns: 100px 3fr 1fr 2fr 2fr 1.2fr 1fr 100px
  .paper_th
    writing-mode: horizontal-tb
    font-weight: 700
    text-align: start
    verticle-align: middle
    padding: 15px 10px
    line-height: 1rem
    font-size: 1rem
    color: var(--font-headline)

.my_paper_body
  height: 100%
  overflow: auto
  .empty
      height: 100%
  tr
    display: grid
    width: 100%
    grid-template-columns: 100px 3fr 1fr 2fr 2fr 1.2fr 1fr 100px
    &[selected='false']
      display: none
  .paper_td
    border-top: 1px solid var(--border-color)
    writing-mode: horizontal-tb
    text-align: start
    padding: 15px 10px
    line-height: 1rem
    font-size: 1rem
    color: var(--font-color)
    transition: .2s
    .paper_type_button
      padding: 5px 10px
      border-radius: 10px
      background-color: var(--type-bg)
      &.pdf
        background-color: var(--type-pdf-bg)
      &.doc
        background-color: var(--type-doc-bg)
      &.docx
        background-color: var(--type-docx-bg)
    .paper_download_button
      padding: 0px 20px
      border-radius: 5px
      border-color: var(--border-focus-color)
      border-width: 1px
      background-color: var(--button-bg)
      transition: .2s
      &:hover
        cursor: pointer
        background-color: var(--button-focus-bg)
      .paper_dowload_button_icon
        width: 16px
        path
          stroke: #333
      .paper_upload_button_icon
        width: 14px
    &.paper_headline
      overflow: hidden
    &.paper_created,
    &.paper_updated
      color: var(--font-grey)
.paper_download,
.paper_statu
  display: flex;
  padding: 0 !important;
  align-items: center;
  justify-content: center;
.paper_statu_button
  color: var(--font-grey)
  padding: 5px 10px
  border-radius: 5px
  &.unknown
    background-color: var(--statu-unknown)
  &.completed
    background-color: var(--statu-completed)
  &.underReview
    background-color: var(--statu-underReview)
  &.needsModification
    background-color: var(--statu-needsModification)
    color: white


.dropdown_container
  padding: 3px 10px
  display: flex
  flex-direction: column
  .el-checkbox
    margin: 0
    height: 30px !important
  .el-checkbox__label
    font-size: 16px !important

.paper_type_drop_down
  width: 1rem
  height: 1rem
.paper_statu_drop_down
  width: 1rem
  height: 1rem
  margin-left: 5px

.download_all_papers
  width: 16px
  margin-left: 5px
  cursor pointer