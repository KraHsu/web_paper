.paper_msg_container
  width: 100%
  height: 100%
  display: flex
  flex-direction: column
  .paper_msg_header
    display: flex
    width: 100%
    height: fit-content
    flex-direction: column
    justify-content: space-between;
    align-items: center
    hr
      margin: 0
      width: 100%
      border: none
      height: 2px
      background: var(--border-color)
    .paper_msg_headline
      box-sizing: border-box
      padding: 15px 20px
      margin: 0
      width: 100%
      display: inline-block
      color: var(--font-headline)
      transition: .3s

.msgs
  overflow-y: auto
  .msg_header
    display: flex
    justify-content: space-between
    width: 100%
    &.send_msg
      cursor: pointer !important
    .msg_header_left
      .msg_title
        margin-left: 20px
        color: var(--font-color)
      .isNew
        position: relative
        bottom: 10px
        color: red
        margin-left: 5px
    .msg_header_right
        color: var(--font-grey)
      .msg_from
        margin: 0 5px
  .msg_content
    margin-left: 25px
    img
      width: 80%
      margin-left: 10%
      border-radius: 5px
      transition: .3s
      box-shadow: 6px 6px 10px rgba(0, 0, 0, 0)
      &:hover
        box-shadow: 6px 6px 10px #0000001a
    a
      text-decoration: none
      color: var(--border-focus-color)